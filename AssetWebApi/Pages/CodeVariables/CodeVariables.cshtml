@page
@model assetWebApi.Pages.CodeVariables.CodeVariablesModel
@{
    ViewData["Title"] = "Edit Code Variables";
}
<h1>@ViewData["Title"]</h1>
<br>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Sync Delay (Hours):</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="delay" min="1" value="@Model.cv.delay">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Log Retention (Days):</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="logDays" min="1" value="@Model.cv.logDays">
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-primary" href="/" role="button">Back</a>
        </div>
    </div>
</form>